<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieDetailsScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/movieDetailsRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.illiarb.tmdbclient.details.ui.CurvedImageView
            android:id="@+id/movieDetailsPoster"
            android:layout_width="0dp"
            android:layout_height="@dimen/movie_details_poster_height"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bg_movie_details_top_overlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/movieDetailsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsPoster"
            app:layout_constraintEnd_toEndOf="@id/movieDetailsTitle"
            app:layout_constraintStart_toStartOf="@id/movieDetailsTitle"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsPoster" />

        <TextView
            android:id="@+id/movieDetailsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toEndOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsPlay"
            tools:maxLines="2"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/movieDetailsTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:alpha="0.8"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsTitle"
            tools:maxLines="1"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/movieDetailsYearTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:gravity="center_horizontal"
            android:text="@string/movie_details_year"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorAccent"
            app:layout_constraintEnd_toStartOf="@id/movieDetailsCountryTitle"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsTags" />

        <TextView
            android:id="@+id/movieDetailsCountryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/movie_details_country"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsYearTitle"
            app:layout_constraintEnd_toStartOf="@id/movieDetailsLengthTitle"
            app:layout_constraintStart_toEndOf="@id/movieDetailsYearTitle"
            app:layout_constraintTop_toTopOf="@id/movieDetailsYearTitle" />

        <TextView
            android:id="@+id/movieDetailsLengthTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/movie_details_length"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsYearTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movieDetailsCountryTitle"
            app:layout_constraintTop_toTopOf="@id/movieDetailsYearTitle" />

        <TextView
            android:id="@+id/movieDetailsYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toStartOf="@id/movieDetailsCountry"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsYearTitle"
            tools:text="2019" />

        <TextView
            android:id="@+id/movieDetailsCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsYear"
            app:layout_constraintEnd_toStartOf="@id/movieDetailsLength"
            app:layout_constraintStart_toEndOf="@id/movieDetailsYear"
            app:layout_constraintTop_toTopOf="@id/movieDetailsYear"
            tools:text="USA" />

        <TextView
            android:id="@+id/movieDetailsLength"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/movieDetailsCountry"
            app:layout_constraintTop_toTopOf="@id/movieDetailsYear"
            tools:text="112 min" />

        <TextView
            android:id="@+id/movieDetailsOverview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:ellipsize="end"
            android:maxLines="5"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
            app:layout_constraintStart_toStartOf="@id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsYear"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/movieDetailsPhotosTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/movie_details_photos"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsOverview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movieDetailsPhotos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsPhotosTitle"
            tools:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/item_photo"
            tools:orientation="horizontal" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/movieDetailsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <include layout="@layout/layout_start_end_guidelines" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>