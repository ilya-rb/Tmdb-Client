<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/filtersEnd"
        app:constraintSetStart="@id/filtersStart"
        app:duration="500">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/discoverSwipeArea"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/discoverSwipeArea" />

        <OnClick
            app:clickAction="transitionToStart"
            app:targetId="@id/discoverOverlay" />

    </Transition>

    <ConstraintSet android:id="@+id/filtersStart">

        <Constraint
            android:id="@id/discoverList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/discoverFiltersContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <Constraint
            android:id="@id/discoverOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="@id/discoverFiltersContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="setClickable"
                app:customBoolean="false" />

        </Constraint>

        <Constraint
            android:id="@+id/discoverFiltersContainer"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tmdb_white"
            android:elevation="@dimen/elevation_normal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/filtersEnd">

        <Constraint
            android:id="@id/discoverList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/discoverFiltersContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <Constraint
            android:id="@id/discoverOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            app:layout_constraintBottom_toTopOf="@id/discoverFiltersContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="setClickable"
                app:customBoolean="true" />

        </Constraint>

        <Constraint
            android:id="@+id/discoverFiltersContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/tmdb_white"
            android:elevation="@dimen/elevation_normal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </ConstraintSet>

</MotionScene>