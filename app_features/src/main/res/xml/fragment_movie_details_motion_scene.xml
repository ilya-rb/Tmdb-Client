<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="500">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/movieDetailsScrollView"
            app:touchAnchorSide="top"
            app:touchRegionId="@id/movieDetailsScrollView" />

        <KeyFrameSet>

            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/movieDetailsPlay"
                app:percentY="0.10" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/movieDetailsPoster"
            android:layout_width="0dp"
            android:layout_height="@dimen/movie_details_poster_height"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="curveOffset"
                app:customIntegerValue="120" />

        </Constraint>

        <Constraint
            android:id="@+id/movieDetailsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsPoster"
            app:layout_constraintEnd_toEndOf="@id/movieDetailsPoster"
            app:layout_constraintStart_toStartOf="@id/movieDetailsPoster"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsPoster" />

        <Constraint
            android:id="@+id/movieDetailsToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back">

            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/transparent" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/movieDetailsPoster"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <CustomAttribute
                app:attributeName="curveOffset"
                app:customIntegerValue="0" />

        </Constraint>

        <Constraint
            android:id="@+id/movieDetailsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:src="@drawable/ic_play_arrow"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@id/movieDetailsToolbar"
            app:layout_constraintEnd_toEndOf="@id/movieDetailsToolbar"
            app:layout_constraintTop_toBottomOf="@id/movieDetailsToolbar" />

        <Constraint
            android:id="@+id/movieDetailsToolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back">

            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@color/tmdb_blue_800" />

        </Constraint>

    </ConstraintSet>

</MotionScene>