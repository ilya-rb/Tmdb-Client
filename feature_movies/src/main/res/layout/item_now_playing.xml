<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_movie_height"
    android:background="@drawable/bg_item_now_playing"
    android:contentDescription="@null"
    tools:scaleType="fitXY"
    tools:src="@tools:sample/backgrounds/scenic">

    <ImageView
        android:id="@+id/itemNowPlayingCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_item_now_playing"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:scaleType="fitXY"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/itemNowPlayingPosterSmall"
        android:layout_width="@dimen/item_now_playing_poster_small_height"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:scaleType="fitXY"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/itemNowPlayingTitle"
        style="@style/MovieNowPlayingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemNowPlayingPosterSmall"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Movie title" />

    <ImageView
        android:id="@+id/itemNowPlayingTmdb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:contentDescription="@null"
        android:src="@drawable/ic_tmdblogo"
        app:layout_constraintStart_toStartOf="@id/itemNowPlayingTitle"
        app:layout_constraintTop_toBottomOf="@id/itemNowPlayingTitle" />

    <TextView
        android:id="@+id/itemNowPlayingRating"
        style="@style/MovieNowPlayingText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="@id/itemNowPlayingTmdb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemNowPlayingTmdb"
        app:layout_constraintTop_toTopOf="@id/itemNowPlayingTmdb"
        tools:text="7.4" />

</androidx.constraintlayout.widget.ConstraintLayout>